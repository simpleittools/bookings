{{template "base" .}}
{{define "css"}}
{{end}}

{{define "content"}}


  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-3">
        <h1 class="text-center mt-5">Search for Availability</h1>
        <form action="/search-availability" method="post" class="needs-validation" novalidate>
          <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
          <div class="form-row">
            <div class="col">
              <div id="reservation-dates" class="form-row">
                <div class="col">
                  <input type="text" name="start" class="form-control" placeholder="Arrival Date"required>
                </div>
                <div class="col">
                  <input type="text" name="end" class="form-control" placeholder="Departure Date"required>
                </div>
              </div>
            </div>
          </div>
          <hr>

          <button class="btn btn-primary" type="submit">Search Availability</button>
        </form>
      </div>
    </div>
  </div>

{{end}}
{{define "js"}}
  <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.3/dist/js/datepicker-full.min.js"></script>
  <script src="/static/js/calendar.js"></script>
{{end}}
